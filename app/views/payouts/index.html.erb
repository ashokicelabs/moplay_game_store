<h1>Listing payouts</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Publisher</th>
      <th>Amount paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payouts.each do |payout| %>
      <tr>
        <td><%= payout.id %></td>
        <td><%= payout.publisher_id %></td>
        <td><%= payout.amount_paid %></td>
        <td><%= link_to 'Show', payout %></td>
        <td><%= link_to 'Edit', edit_payout_path(payout) %></td>
        <td><%= link_to 'Destroy', payout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payout', new_payout_path %>
